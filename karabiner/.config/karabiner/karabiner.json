{
    "title": "Adds Nav Layer to Mac",
    "maintainers": ["axhixh"],
    "author": "Ashish Shrestha",
    "homepage": "https://www.axhixh.com.np",
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Change caps_lock to command when held and escape when tapped",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "identifiers": [{ "is_built_in_keyboard": true }],
                                        "type": "device_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to_if_alone": [{ "key_code": "escape" }],
                                "to": [
                                  {
                                      "set_variable": {
                                          "name": "nav_layer",
                                          "value": 1
                                        }
                                  }  
                                ],
                                "to_after_key_up": [
                                    {
                                        "set_variable": {
                                            "name": "nav_layer",
                                            "value": 0
                                        }
                                    }
                                ],
                                "type": "basic",
                                "description": "hold caps lock key for navigation layer, tap for esc"
                            },
                            {
                                "type": "basic",
                                "description": "left arrow when nav layer is active",
                                "from": {"key_code": "j"},
                                "to": [{"key_code": "left_arrow"}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "down arrow when nav layer is active",
                                "from": {"key_code": "k"},
                                "to": [{"key_code": "down_arrow"}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "up arrow when nav layer is active",
                                "from": {"key_code": "i"},
                                "to": [{"key_code": "up_arrow"}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "right arrow when nav layer is active",
                                "from": {"key_code": "l"},
                                "to": [{"key_code": "right_arrow"}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "home when nav layer is active",
                                "from": {"key_code": "u"},
                                "to": [{"key_code": "home"}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "end when nav layer is active",
                                "from": {"key_code": "o"},
                                "to": [{"key_code": "end"}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "page up when nav layer is active",
                                "from": {"key_code": "y"},
                                "to": [{"key_code": "page_up"}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "page down when nav layer is active",
                                "from": {"key_code": "h"},
                                "to": [{"key_code": "page_down"}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "screenshot",
                                "from": {"key_code": "p"},
                                "to": [{"key_code": "4", "modifiers": ["left_command", "left_shift"]}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "workspace 1",
                                "from": {"key_code": "1"},
                                "to": [{"key_code": "1", "modifiers": ["left_alt"]}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "workspace 2",
                                "from": {"key_code": "2"},
                                "to": [{"key_code": "2", "modifiers": ["left_alt"]}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "workspace 3",
                                "from": {"key_code": "3"},
                                "to": [{"key_code": "3", "modifiers": ["left_alt"]}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            },
                            {
                                "type": "basic",
                                "description": "workspace 4",
                                "from": {"key_code": "4"},
                                "to": [{"key_code": "4", "modifiers": ["left_alt"]}],
                                "conditions": [{"name": "nav_layer", "type": "variable_if", "value": 1}]
                            }
                        ]
                    }
                ]
            },
            "devices": [
                {
                    "identifiers": {
                        "is_keyboard": true,
                        "product_id": 529,
                        "vendor_id": 51966
                    },
                    "ignore": true
                }
            ],
            "name": "Default profile",
            "selected": true,
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        }
    ]
}
