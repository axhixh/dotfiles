[core]
	excludesfile = ~/.gitignore_global
    pager = less -FXRS -x2
    editor = vim

[web]
    browser = firefox

[color]
    ui = true

[push]
	default = simple

[http "https://dpa-stash.lss.emc.com"]
    sslverify = false

[alias]
    unstage = reset HEAD --
    uncommit = reset --soft HEAD^
    last = log -1 HEAD
    ls = log --decorate --oneline
    ll = log --decorate --numstat
    set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`

[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
